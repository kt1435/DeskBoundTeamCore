services:
  hopsitalstatisticsdbt:
    build:
      context: C:\Users\Khuong\Desktop\GitHub\HopsitalStatisticsDBT
      dockerfile: HopsitalStatisticsDBT/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: hopsitalstatisticsdbt
    ports:
    - 80/tcp
  hosiptalapi:
    build:
      context: C:\Users\Khuong\Desktop\GitHub\HopsitalStatisticsDBT
      dockerfile: HosiptalApi/Dockerfile
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: /root/.nuget/fallbackpackages
    image: hosiptalapi:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages  bin/Debug/netcoreapp2.0/HosiptalApi.dll'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/bash -c "if PID=$$(pidof
        -x dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - 80/tcp
    volumes:
    - C:\Users\Khuong\Desktop\GitHub\HopsitalStatisticsDBT\HosiptalApi:/app:rw
    - C:\Users\Khuong\vsdbg\vs2017u5:/remote_debugger:ro
    - C:\Program Files\dotnet\sdk\NuGetFallbackFolder:/root/.nuget/fallbackpackages:ro
    - C:\Users\Khuong\.nuget\packages:/root/.nuget/packages:ro
version: '3.0'